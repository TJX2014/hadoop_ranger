<configuration>
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://k8s-node1:8020</value>
    </property>
    <property>
        <name>hadoop.security.authentication</name>
        <value>kerberos</value>
    </property>
    <property>
        <name>hadoop.security.authorization</name>
        <value>true</value>
    </property>
    <property>
        <name>hadoop.security.auth_to_local</name>
        <value>
            RULE:[2:$1@$0](hdfs@.*HADOOP.COM)s/.*/hdfs/
            RULE:[2:$1@$0](yarn@.*HADOOP.COM)s/.*/yarn/
            DEFAULT
        </value>
    </property>

    <property>
        <name>hadoop.proxyuser.hive-metastore.hosts</name>
        <value>*</value>
    </property>
    <property>
        <name>hadoop.proxyuser.hive-metastore.groups</name>
        <value>*</value>
    </property>
    <property>
        <name>hadoop.proxyuser.hive-server2.hosts</name>
        <value>*</value>
    </property>
    <property>
        <name>hadoop.proxyuser.hive-server2.groups</name>
        <value>*</value>
    </property>
</configuration>